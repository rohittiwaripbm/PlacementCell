<% useLayout = true; %>
<style>
  /* Alternate row colors */
.even-row {
  background-color: #f8f9fa; /* Light gray */
}

.odd-row {
  background-color: #ffffff; /* White */
}

/* Hover effect */
.table-hover tbody tr:hover {
  background-color: #f1f1f1; /* Lighter gray on hover */
}

/* Button styling */
.btn-danger {
  background-color: #dc3545; /* Red */
  border-color: #dc3545; /* Red */
  color: #ffffff; /* White */
}

.btn-danger:hover {
  background-color: #c82333; /* Darker red on hover */
  border-color: #bd2130; /* Darker red on hover */
}

.btn-rounded-pill {
  border-radius: 50px; /* Adjust as needed */
}

/* Padding for the button */
.px-3 {
  padding-left: 1rem !important;
  padding-right: 1rem !important;
}

.py-1 {
  padding-top: 0.25rem !important;
  padding-bottom: 0.25rem !important;
}

</style>
<div class="container mt-5">
  <h1 class="text-center mb-4">All Students</h1>
  <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Student Name</th>
      <th>Student Email</th>
      <th>Student Mobile</th>
      <th>Batch</th>
      <th>College</th>
      <th>Status</th>
      <th>DSA Score</th>
      <th>Web Dev Score</th>
      <th>React Score</th>

    </tr>
  </thead>
  <tbody>
    <% students.forEach((student, index) => { %>
      <tr class="<%= index % 2 === 0 ? 'even-row' : 'odd-row' %>">
        <td><%= student.studentName %></td>
        <td><%= student.studentEmail || 'N/A' %></td>
        <td><%= student.studentMob || 'N/A' %></td>
        <td><%= student.studentBatch %></td>
        <td><%= student.studentCollege %></td>
        <td><%= student.studentStatus %></td>
        <td><%= student.dsaScore %></td>
        <td><%= student.webDevScore %></td>
        <td><%= student.reactScore %></td>
        
      </tr>
    <% }) %>
  </tbody>

</table>
</div>